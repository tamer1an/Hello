<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tyco.visonic.interactive" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tyco.visonic.interactive.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tyco.visonic.interactive.sandbox.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.tyco.visonic.interactive.sandbox.WideAppFlowListActivity"
            android:label="@string/title_wideappflow_list" >
        </activity>
        <activity
            android:name="com.tyco.visonic.interactive.sandbox.WideAppFlowDetailActivity"
            android:label="@string/title_wideappflow_detail"
            android:parentActivityName="com.tyco.visonic.interactive.sandbox.WideAppFlowListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tyco.visonic.interactive.WideAppFlowListActivity" />
        </activity>
        <activity
            android:name="com.tyco.visonic.interactive.sandbox.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
    </application>

</manifest>
