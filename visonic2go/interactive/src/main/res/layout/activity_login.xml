<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}">

    <ImageView android:contentDescription="@string/hello_world"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/visonic_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/host_address"
        android:id="@+id/hostTextView"
        android:layout_marginTop="28dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:layout_marginRight="25dp"
        android:id="@+id/hostEditText"
        android:layout_alignBottom="@+id/hostTextView"
        android:layout_toRightOf="@+id/hostTextView"
        android:layout_marginLeft="31dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_id"
        android:id="@+id/panelIdTextView"
        android:layout_below="@+id/hostTextView"
        android:layout_marginTop="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/hostEditText"
        android:paddingLeft="15dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panelIdEditText"
        android:layout_alignBottom="@+id/panelIdTextView"
        android:layout_alignLeft="@+id/hostEditText"
        android:layout_alignStart="@+id/hostEditText"
        android:layout_alignRight="@+id/hostEditText"
        android:layout_alignEnd="@+id/hostEditText"
        android:inputType="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code"
        android:id="@+id/codeTextView"
        android:layout_below="@+id/panelIdTextView"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/hostEditText"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeEditView"
        android:layout_alignBottom="@+id/codeTextView"
        android:layout_alignLeft="@+id/panelIdEditText"
        android:layout_alignStart="@+id/panelIdEditText"
        android:layout_alignRight="@+id/panelIdEditText"
        android:layout_alignEnd="@+id/panelIdEditText"
        android:inputType="numberPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_submit"
        android:id="@+id/login"
        android:layout_above="@+id/rememberSettings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms"
        android:id="@+id/terms"
        android:layout_alignTop="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_login"
        android:id="@+id/rememberSettings"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
